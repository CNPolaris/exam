<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.polaris.exam.mapper.MessageMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.polaris.exam.pojo.Message">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="content" property="content" />
        <result column="create_time" property="createTime" />
        <result column="send_user_id" property="sendUserId" />
        <result column="send_user_name" property="sendUserName" />
        <result column="send_user_real_name" property="sendUserRealName" />
        <result column="receive_user_count" property="receiveUserCount" />
        <result column="read_count" property="readCount" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, title, content, create_time, send_user_id, send_user_name, send_user_real_name, receive_user_count, read_count
    </sql>

</mapper>
